                </Image>
            </Button>


            <Button Name="LB" Grid.Column="0" Grid.Row="2" Margin="1">
                <Button.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=CmdImageDoubleClick}" >
                        <MouseBinding.CommandParameter>
